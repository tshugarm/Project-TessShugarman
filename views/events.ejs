     <!-- Sports Grid -->
    <section class="sports-grid">
        <div class="sport-card">
            <div class="sport-icon">
                <i class="fas fa-basketball-ball"></i>
            </div>
            <h3><a href="event.ejs">Basketball</a></h3>            
            <p>5v5 competitive basketball leagues with playoffs and championship tournaments.</p>
            <div class="event-info">
                <div class="event-meta">
                    <span>Next Game: Mon 7:00 PM</span>
                    <span class="status open">Open</span>
                </div>
                <div class="event-meta">
                    <span>Teams: 12/16</span>
                    <span>Season: Fall 2025</span>
                </div>
            </div>
        </div>

        <div class="sport-card">
            <div class="sport-icon">
                <i class="fas fa-football-ball"></i>
            </div>
            <h3><a href="event.ejs">Flag Football</a></h3>            
            <p>Non-contact football with all the excitement and strategy of the real game.</p>
            <div class="event-info">
                <div class="event-meta">
                    <span>Next Game: Wed 6:00 PM</span>
                    <span class="status full">Full</span>
                </div>
                <div class="event-meta">
                    <span>Teams: 16/16</span>
                    <span>Season: Fall 2025</span>
                </div>
            </div>
        </div>

        <div class="sport-card">
            <div class="sport-icon">
                <i class="fas fa-volleyball-ball"></i>
            </div>
            <h3><a href="event.ejs">Volleyball</a></h3>            
            <p>Indoor volleyball leagues for all skill levels with weekly matches.</p>
            <div class="event-info">
                <div class="event-meta">
                    <span>Next Game: Thu 7:30 PM</span>
                    <span class="status open">Open</span>
                </div>
                <div class="event-meta">
                    <span>Teams: 8/12</span>
                    <span>Season: Fall 2025</span>
                </div>
            </div>
        </div>

        <div class="sport-card">
            <div class="sport-icon">
                <i class="fas fa-futbol"></i>
            </div>
            <h3><a href="event.ejs">Soccer</a></h3>            
            <p>Outdoor soccer matches with skilled referees and competitive play.</p>
            <div class="event-info">
                <div class="event-meta">
                    <span>Next Game: Sat 2:00 PM</span>
                    <span class="status open">Open</span>
                </div>
                <div class="event-meta">
                    <span>Teams: 10/14</span>
                    <span>Season: Fall 2025</span>
                </div>
            </div>
        </div>

        <div class="sport-card">
            <div class="sport-icon">
                <i class="fas fa-table-tennis"></i>
            </div>
            <h3><a href="event.ejs">Table Tennis</a></h3>            
            <p>Fast-paced ping pong tournaments with singles and doubles competitions.</p>
            <div class="event-info">
                <div class="event-meta">
                    <span>Tournament: Fri 5:00 PM</span>
                    <span class="status upcoming">Upcoming</span>
                </div>
                <div class="event-meta">
                    <span>Players: 24/32</span>
                    <span>Format: Single Elimination</span>
                </div>
            </div>
        </div>

        <div class="sport-card">
            <div class="sport-icon">
                <i class="fas fa-running"></i>
            </div>
            <h3><a href="event.ejs">Track & Field</a></h3>            
            <p>Individual and team events including sprints, distance, and field events.</p>
            <div class="event-info">
                <div class="event-meta">
                    <span>Meet: Sun 10:00 AM</span>
                    <span class="status open">Open</span>
                </div>
                <div class="event-meta">
                    <span>Athletes: 45/60</span>
                    <span>Events: 12 Categories</span>
                </div>
            </div>
        </div>
