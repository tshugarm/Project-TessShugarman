<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | Campus Sports Hub</title>
    
    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <!-- Base styles (always loaded) -->
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/components.css">
    
    <!-- Page-specific styles -->
    <% if (pageType === 'home') { %>
        <link rel="stylesheet" href="/css/pages/index.css">
    <% } else if (pageType === 'events') { %>
        <link rel="stylesheet" href="/css/pages/events.css">
    <% } else if (pageType === 'forms') { %>
        <link rel="stylesheet" href="/css/pages/forms.css">
    <% } else if (pageType === 'content') { %>
        <link rel="stylesheet" href="/css/pages/content.css">
    <% } %>
</head>