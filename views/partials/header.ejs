<header class="header">
    <div class="container">
        <div class="header-content">
            <a href="/" class="logo">
                <span>Campus Sports Hub</span>
            </a>
            <nav class="user-nav">
                <% if (isLoggedIn) { %>
                    <!-- Logged in users see: profile (with name), logout -->
                    <span class="nav-welcome">Hello, <%= user.firstName %>!</span>
                    <a href="/users/profile" class="nav-link">
                        <i class="fas fa-user"></i> Profile
                    </a>
                    <form action="/users/logout" method="POST" style="display: inline;">
                        <button type="submit" class="nav-link logout-btn">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </button>
                    </form>
                <% } else { %>
                    <!-- Guests see: login, sign up -->
                    <a href="/users/login" class="nav-link">
                        <i class="fas fa-sign-in-alt"></i> Log In
                    </a>
                    <a href="/users/signup" class="nav-link signup">
                        <i class="fas fa-user-plus"></i> Sign Up
                    </a>
                <% } %>
            </nav>
        </div>
    </div>
</header>