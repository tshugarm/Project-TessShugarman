<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', { title: event.title, pageType: 'events' }) %>
<body>
    <%- include('../partials/header') %>
    <%- include('../partials/nav', { currentPage: 'events' }) %>

    <%- include('../partials/popup') %>

    <main class="main-content">
        <div class="container">
            <section class="event-details">
                <section class="event-header">
                    <h1><%= event.title %></h1>
                    <p><%= event.details %></p>
                </section>
                
                <!-- RSVP Section for Non-Creators -->
                <% if (isLoggedIn && !isCreator) { %>
                    <section class="rsvp-section">
                        <h2>Will you attend this event?</h2>
                        <div class="rsvp-buttons">
                            <form method="POST" action="/events/<%= event._id %>/rsvp" style="display: inline;">
                                <button type="submit" name="status" value="YES" 
                                        class="btn-rsvp <%= userRsvp && userRsvp.status === 'YES' ? 'active' : '' %> rsvp-yes">
                                    <i class="fas fa-thumbs-up"></i> Going
                                </button>
                            </form>
                            <form method="POST" action="/events/<%= event._id %>/rsvp" style="display: inline;">
                                <button type="submit" name="status" value="MAYBE" 
                                        class="btn-rsvp <%= userRsvp && userRsvp.status === 'MAYBE' ? 'active' : '' %> rsvp-maybe">
                                    <i class="fas fa-question"></i> Maybe
                                </button>
                            </form>
                            <form method="POST" action="/events/<%= event._id %>/rsvp" style="display: inline;">
                                <button type="submit" name="status" value="NO" 
                                        class="btn-rsvp <%= userRsvp && userRsvp.status === 'NO' ? 'active' : '' %> rsvp-no">
                                    <i class="fas fa-thumbs-down"></i> Not Going
                                </button>
                            </form>
                        </div>
                        <% if (userRsvp) { %>
                            <p class="current-rsvp">
                                Your current status: <strong><%= userRsvp.getStatus() %></strong>
                            </p>
                        <% } %>
                    </section>
                <% } else if (!isLoggedIn) { %>
                    <section class="rsvp-section">
                        <h2>Will you attend this event?</h2>
                        <p class="login-prompt">
                            <a href="/users/login" class="btn btn-primary">Login to RSVP</a>
                        </p>
                    </section>
                <% } %>
                
                <!-- RSVP Count Display -->
                <section class="rsvp-count">
                    <h3>
                        <i class="fas fa-users"></i> 
                        <span class="count"><%= rsvpCount %></span> 
                        <%= rsvpCount === 1 ? 'person is' : 'people are' %> going
                    </h3>
                </section>
                
                <h2>Event Details</h2>
                <ul>
                    <li><strong>Category:</strong> <%= event.category %></li>
                    <li><strong>Host:</strong> <%= event.host %></li>
                    <li><strong>Location:</strong> <%= event.location %></li>
                    <li><strong>Start Date & Time:</strong> <%= event.startDateTime.toLocaleString() %></li>
                    <li><strong>End Date & Time:</strong> <%= event.endDateTime.toLocaleString() %></li>
                    <% if (event.createdBy) { %>
                        <li><strong>Created by:</strong> <%= event.createdBy.firstName %> <%= event.createdBy.lastName %></li>
                    <% } %>
                    <% if (event.createdAt) { %>
                        <li><strong>Created:</strong> <%= event.createdAt.toLocaleDateString() %></li>
                    <% } %>
                    <% if (event.updatedAt && event.updatedAt.getTime() !== event.createdAt.getTime()) { %>
                        <li><strong>Last Updated:</strong> <%= event.updatedAt.toLocaleDateString() %></li>
                    <% } %>
                </ul>
               
                <% if (event.image && event.image !== '/images/default-event.jpg') { %>
                    <div class="event-image">
                        <h3>Event Image</h3>
                        <img src="<%= event.image %>" alt="<%= event.title %>" style="max-width: 100%; height: auto; border-radius: 10px; margin-top: 1rem;">
                    </div>
                <% } %>
                
                <div class="event-actions">
                    <a href="/events" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Events
                    </a>
                    
                    <% if (isLoggedIn) { %>
                        <a href="/events/new" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Create Event
                        </a>
                        
                        <!-- Only show edit/delete if user owns this event -->
                        <% if (isCreator) { %>
                            <a href="/events/<%= event._id %>/edit" class="btn btn-success">
                                <i class="fas fa-edit"></i> Edit Event
                            </a>
                            <form method="POST" action="/events/<%= event._id %>?_method=DELETE" 
                                  style="display: inline;" 
                                  onsubmit="return confirm('Are you sure you want to delete this event? All RSVPs will also be deleted.')">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Delete Event
                                </button>
                            </form>
                        <% } %>
                    <% } else { %>
                        <a href="/users/signup" class="btn btn-primary">
                            <i class="fas fa-user-plus"></i> Join to Create Events
                        </a>
                    <% } %>
                </div>
            </section>
        </div>
    </main>

    <%- include('../partials/footer') %>