<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', { title: 'Profile', pageType: 'profile' }) %>
<body>
    <%- include('../partials/header') %>
    <%- include('../partials/nav', { currentPage: 'profile' }) %>
    
    <%- include('../partials/popup') %>

    <main class="main-content">
        <div class="container">
            <section class="hero">
                <div class="hero-content">
                    <h1>Welcome, <%= user.getFullName() %>!</h1>
                    <p class="hero-subtitle">Manage your events and RSVPs</p>
                </div>
            </section>
            
            <section class="content-section">
                <div class="profile-content">
                    <div class="profile-info">
                        <h2>Profile Information</h2>
                        <div class="profile-details">
                            <div class="profile-item">
                                <strong>Name:</strong> <%= user.getFullName() %>
                            </div>
                            <div class="profile-item">
                                <strong>Email:</strong> <%= user.email %>
                            </div>
                            <div class="profile-item">
                                <strong>Member Since:</strong> <%= user.createdAt.toLocaleDateString() %>
                            </div>
                        </div>
                        
                        <div class="profile-stats">
                            <h3>Your Activity</h3>
                            <div class="stats-grid">
                                <div class="stat-item">
                                    <span class="stat-number"><%= events.length %></span>
                                    <span class="stat-label">Events Created</span>
                                </div>
                                <div class="stat-item">
                                    <span class="stat-number"><%= rsvps.filter(rsvp => rsvp.status === 'YES').length %></span>
                                    <span class="stat-label">Going</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="profile-actions">
                            <form action="/users/logout" method="POST" style="display: inline;">
                                <button type="submit" class="btn btn-danger">Logout</button>
                            </form>
                        </div>
                    </div>
                    
                    <div class="user-activities">
                        <!-- User's Created Events Section -->
                        <div class="activity-section">
                            <h2>Your Events (<%= events.length %>)</h2>
                            
                            <% if (events.length > 0) { %>
                                <div class="events-grid">
                                    <% events.forEach(event => { %>
                                        <div class="event-card">
                                            <div class="event-card-header">
                                                <h3><a href="/events/<%= event._id %>"><%= event.title %></a></h3>
                                                <span class="event-category"><%= event.category %></span>
                                            </div>
                                            
                                            <div class="event-card-body">
                                                <p class="event-description">
                                                    <%= event.details.length > 100 ? event.details.substring(0, 100) + '...' : event.details %>
                                                </p>
                                                
                                                <div class="event-meta">
                                                    <div class="event-meta-item">
                                                        <i class="fas fa-map-marker-alt"></i>
                                                        <span><%= event.location %></span>
                                                    </div>
                                                    <div class="event-meta-item">
                                                        <i class="fas fa-calendar"></i>
                                                        <span><%= event.startDateTime.toLocaleDateString() %></span>
                                                    </div>
                                                    <div class="event-meta-item">
                                                        <i class="fas fa-clock"></i>
                                                        <span><%= event.startDateTime.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %></span>
                                                    </div>
                                                </div>
                                            </div>
                                            
                                            <div class="event-card-actions">
                                                <a href="/events/<%= event._id %>" class="btn btn-secondary">View</a>
                                                <a href="/events/<%= event._id %>/edit" class="btn btn-success">Edit</a>
                                                <form method="POST" action="/events/<%= event._id %>?_method=DELETE" 
                                                      style="display: inline;" 
                                                      onsubmit="return confirm('Are you sure you want to delete this event?')">
                                                    <button type="submit" class="btn btn-danger">Delete</button>
                                                </form>
                                            </div>
                                        </div>
                                    <% }) %>
                                </div>
                            <% } else { %>
                                <div class="empty-events">
                                    <div class="empty-icon">
                                        <i class="fas fa-calendar-plus"></i>
                                    </div>
                                    <h3>No Events Yet</h3>
                                    <p>You haven't created any events yet. Start organizing your first event!</p>
                                    <a href="/events/new" class="btn btn-primary">Create Your First Event</a>
                                </div>
                            <% } %>
                        </div>
                        
                        <!-- User's RSVPs Section -->
                        <div class="activity-section">
                            <h2>Your RSVPs (<%= rsvps.length %>)</h2>
                            
                            <% if (rsvps.length > 0) { %>
                                <div class="rsvp-grid">
                                    <% rsvps.forEach(rsvp => { %>
                                        <div class="rsvp-card">
                                            <div class="rsvp-card-header">
                                                <h3><a href="/events/<%= rsvp.event._id %>"><%= rsvp.event.title %></a></h3>
                                                <span class="rsvp-status rsvp-<%= rsvp.status.toLowerCase() %>">
                                                    <% if (rsvp.status === 'YES') { %>
                                                        <i class="fas fa-thumbs-up"></i> Going
                                                    <% } else if (rsvp.status === 'NO') { %>
                                                        <i class="fas fa-thumbs-down"></i> Not Going
                                                    <% } else { %>
                                                        <i class="fas fa-question"></i> Maybe
                                                    <% } %>
                                                </span>
                                            </div>
                                            
                                            <div class="rsvp-card-body">
                                                <div class="event-meta">
                                                    <div class="event-meta-item">
                                                        <i class="fas fa-user"></i>
                                                        <span>Host: <%= rsvp.event.host %></span>
                                                    </div>
                                                    <div class="event-meta-item">
                                                        <i class="fas fa-map-marker-alt"></i>
                                                        <span><%= rsvp.event.location %></span>
                                                    </div>
                                                    <div class="event-meta-item">
                                                        <i class="fas fa-calendar"></i>
                                                        <span><%= rsvp.event.startDateTime.toLocaleDateString() %></span>
                                                    </div>
                                                    <div class="event-meta-item">
                                                        <i class="fas fa-clock"></i>
                                                        <span><%= rsvp.event.startDateTime.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %></span>
                                                    </div>
                                                </div>
                                                
                                                <div class="rsvp-meta">
                                                    <small class="text-muted">
                                                        RSVP'd on <%= rsvp.createdAt.toLocaleDateString() %>
                                                        <% if (rsvp.updatedAt.getTime() !== rsvp.createdAt.getTime()) { %>
                                                            (Updated on <%= rsvp.updatedAt.toLocaleDateString() %>)
                                                        <% } %>
                                                    </small>
                                                </div>
                                            </div>
                                            
                                            <div class="rsvp-card-actions">
                                                <a href="/events/<%= rsvp.event._id %>" class="btn btn-primary">
                                                    <i class="fas fa-eye"></i> View Event
                                                </a>
                                                <small class="update-hint">Visit event page to update your RSVP</small>
                                            </div>
                                        </div>
                                    <% }) %>
                                </div>
                            <% } else { %>
                                <div class="empty-rsvps">
                                    <div class="empty-icon">
                                        <i class="fas fa-calendar-check"></i>
                                    </div>
                                    <h3>No RSVPs Yet</h3>
                                    <p>You haven't RSVP'd to any events yet. Browse events to find something interesting!</p>
                                    <a href="/events" class="btn btn-primary">Browse Events</a>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>
    
    <%- include('../partials/footer') %>
</body>
</html>