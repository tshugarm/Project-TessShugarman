<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', { title: 'Login', pageType: 'forms' }) %>
<body>
    <%- include('../partials/header') %>
    <%- include('../partials/nav', { currentPage: 'login' }) %>

    <%- include('./partials/popup') %>

    <main class="main-content">
        <form action="/users/login" method="POST" id="new-event-form">
            <h2>Login to Your Account</h2>
            
            <% if (typeof error !== 'undefined') { %>
                <div class="alert alert-error">
                    <%= error %>
                </div>
            <% } %>
            
            <div class="form-group">
                <label for="email">Email Address:</label>
                <input type="email" id="email" name="email" 
                       value="<%= typeof formData !== 'undefined' ? formData.email || '' : '' %>" 
                       required placeholder="Enter your email address">
                <div class="validation-message" id="email-error"></div>
            </div>
            
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" 
                       required placeholder="Enter your password">
                <div class="validation-message" id="password-error"></div>
            </div>
            
            <div class="form-actions">
                <button type="submit">Login</button>
                <a href="/users/signup" class="btn-cancel">Don't have an account? Sign Up</a>
            </div>
        </form>
    </main>
    
    <script src="/javascript/login-validation.js"></script>
    
    <%- include('../partials/footer') %>
</body>
</html>